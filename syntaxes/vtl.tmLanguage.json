{
	"name": "velocity",
	"fileTypes": ["vm"],
	"scopeName": "text.velocity",
	"patterns": [
	  {
		"match": "#\\*.*?\\*#",
		"name": "comment.block.velocity"
	  },
	  {
		"match": "##.*$",
		"name": "comment.line.velocity"
	  },
	  {
		"match": "\\$(\\w+|!\\{[^}]+\\})",
		"name": "variable.other.velocity"
	  },
	  {
		"match": "#(if|elseif|else|end|foreach|macro|parse|include)\\b",
		"name": "keyword.control.velocity"
	  },
	  {
		"match": "\"(?:[^\"\\\\]|\\\\.)*\"",
		"name": "string.quoted.double.velocity"
	  },
	  {
		"match": "'(?:[^'\\\\]|\\\\.)*'",
		"name": "string.quoted.single.velocity"
	  }
	]
  }
  